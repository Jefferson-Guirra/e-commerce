    "@types/react-dom": "18.0.9",
    "bcrypt": "^5.1.0",
    "eslint": "8.30.0",
    "eslint-config-next": "13.0.7",
    "firebase": "^9.15.0",
    "mongodb": "^5.5.0",
    "next": "13.0.7",
    "next-auth": "^4.18.7",
    "nookies": "^2.5.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.7.1",
    "styled-components": "^5.3.6",
    "swiper": "^8.4.5",
    "typescript": "4.9.4",
    "uuidv4": "^6.2.13"
