    "lint": "next lint",
    "prettier": "npx prettier --write 'src/**/*'"
  },
  "dependencies": {
    "@next/font": "^13.0.7",
    "@paypal/react-paypal-js": "^7.8.2",
    "@types/node": "18.11.17",
